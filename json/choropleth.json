{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#F2F2F2",
  "title": "",
  "width": "container",
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/zcha0016/3179/main/json/tr-cities.json",
    "format": {"type": "topojson", "feature": "tr-cities"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/zcha0016/3179/main/data/dataset_csv.csv"
        },
        "key": "CITY",
        "fields": ["_2DOSE", "POPULATION"]
      }
    },
    {"calculate": "datum._2DOSE/datum.POPULATION * 10000", "as": "Confirmed per 10000 population"}
  ],
  "projection": {"type": "equalEarth"},
  "mark": {"type": "geoshape"},
  
  "encoding": {
    "color": {
      "field": "Confirmed per 10000 population",
      "type": "quantitative",
      "scale" : {
        "scheme" : "oranges"
      }
  },
 "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "City"},
      {"field": "_2DOSE", "type": "quantitative", "title" : "Complete Vaccinations"}
    ]
  },
  "config": {"view": {"stroke": ""}}
}