    {
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 500,
  "data": {
    "url": "https://raw.githubusercontent.com/zcha0016/3179/main/Assignment%202/data/covid_19_data_tr.csv"
  },
  "transform": [{"fold": ["Confirmed", "Deaths", "Recovered"]}],
  "encoding": {
    "x": {"field": "Last_Update", "type": "temporal", "title": "Date"},
    "y": {"field": "value", "type": "quantitative", "title": "Count"},
    "color": {
      "condition": {
        "param": "hover",
        "field": "key",
        "type": "nominal",
        "legend": null
      },
      "value": "grey"
    },
    "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.2}
  },
  "layer": [
    {
      "params": [
        {
          "name": "hover",
          "value": [{"key": "Confirmed"}],
          "select": {"type": "point", "fields": ["key"], "on": "mouseover"}
        }
      ],
      "mark": {"type": "line", "strokeWidth": 8, "stroke": "transparent"}
    },
    {"mark": "line"},
    {
      "encoding": {
        "x": {"aggregate": "max", "field": "Last_Update"},
        "y": {"aggregate": {"argmax": "Last_Update"}, "field": "value"}
      },
      "layer": [
        {"mark": {"type": "circle"}},
        {
          "mark": {"type": "text", "align": "left", "dx": 4},
          "encoding": {"text": {"field": "key", "type": "nominal"}}
        }
      ]
    }
  ],
  "config": {"view": {"stroke": null}}
}